<h1><%= @artist.name %></h1>

<h4> List of Songs </h4>

  <% if @artist.songs.any? %>
    <ul>
      <% @artist.songs.each do |song| %>
        <li><%=song.name%></li>
          <% end %>
    </ul>
  <% else %>
  <p>This Artist has not been singing!</p>
<% end %>

<!-- Photos -->
<h4>Photos</h4>
<% @artist.photos.each do |photo| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <%= image_tag photo.image.thumbnail %>
  </div>
</div>
<% end %>

<hr>

<%= link_to "Add a new song", new_artist_song_path(@artist), class: "btn btn-primary" %>
<%= link_to "[Edit]", edit_artist_path(@artist.id), class: "btn btn-primary" %>
<%= link_to "[Delete]", artist_path(@artist.id), class: "btn btn-primary",method: :delete, data: { confirm: "Are you sure?" } %>
