
<%= form_for [:artist, @song] do |f| %>
  <div class="form-group">

  <div class="form-group">
    <label>Song name</label>
    <%= f.text_field :name, placeholder: "Song name", class: "form-control" %>
    <%= f.text_field :album, placeholder: "Album name", class: "form-control" %>
    <%= f.text_field :year, placeholder: "What year was it released?", class: "form-control" %>
    <%= f.label :artist_id %>
    <%= f.collection_select :artist_id, Artist.all, :id, :name %>
  </div>


  <div class="actions">
    <%= f.submit (@song.new_record? ? "Add Song" : "Update") %>
  </div>
<% end %>
